#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "");
	int X,Y;
	printf("Ingrese el año a revisar:\n");
	scanf ("%d",&X);
	
	if (X%4 == 0){
		printf("El año ingresado es bisiesto\n");
	}else{
		printf("El año ingresado NO es bisiesto\n");
	}
	
	printf("\n");
	return 0;
}
