#include <stdio.h>

int main() {
	int i,j,X;
	printf("Indique la cantidad de lineas de la piramide (limite de lineas es 60):\n");
	scanf ("%d",&X);
	printf("\n");
	
	if (X<=60 && X>=1){
		for (i=1; i<=X; i++) {
	        for (j=1; j<=i; j++) {
	            printf("%d ", j);
	        }//Fin del segundo for
	        printf("\n");
	    }//Fin del primer for
	}//Fin de if
	
	printf("\n\n--------FIN DEL PROGRAMA--------");   
	return 0;
}
